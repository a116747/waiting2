<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--스위치 off일때-->
    <item android:state_checked="false">
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="15dp" />
            <size
                android:width="40dp"
                android:height="15dp" />
            <solid
                android:color="#da7c7b7b" />
            <stroke
                android:width="6dp"
                android:color="#00ffffff" />
        </shape>

    </item>
    <!--스위치 on일때-->
    <item android:state_checked="true">
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="15dp" />
            <size
                android:width="40dp"
                android:height="15dp" />
            <solid
                android:color="#70896c48" />
            <stroke
                android:width="6dp"
                android:color="#00ffffff" />
        </shape>
    </item>

</selector>