<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp">

            </padding>
            <stroke
                android:width="1dp"
                android:color="#e0b6b6" />

            <solid android:color="#FFF" />
        </shape>
    </item>
    <!--포커스 잃었을때-->
    <item android:state_focused="false"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
    <shape android:shape="rectangle" >
        <padding
            android:top="10dp"
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp">

        </padding>
        <stroke
            android:width="1dp"
            android:color="#8b8b8b" />

        <solid android:color="#FFF" />
    </shape>
    </item>

</selector>